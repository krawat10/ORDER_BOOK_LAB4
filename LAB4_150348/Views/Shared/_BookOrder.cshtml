@model LAB4_150348.ViewModels.BookOrderViewModel
<h4>Order book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp asp-action="AddBookToOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="OrderId" type="hidden"/>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId">
                    @foreach (Book book in ViewBag.Books)
                    {
                        <option value="@book.Id">@(book.Title) @book.Price (@book.AvailableAmount available)</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BookAmount" class="control-label"></label>
                <input asp-for="BookAmount" type="number" class="form-control" />
                <span asp-validation-for="BookAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
